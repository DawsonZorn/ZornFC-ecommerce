<div style="text-align: center; margin-bottom: 20px;">
  <%= form_with url: root_path, method: :get, local: true, class: 'search-form' do %>
    <label class="search-label">
      <%= text_field_tag :search, params[:search], class: 'input', required: true, placeholder: 'Type here...' %>
      <kbd class="slash-icon">/</kbd>
      <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 56.966 56.966">
        <g>
          <path d="M55.146 51.887 41.588 37.786A22.926 22.926 0 0 0 46.984 23c0-12.682-10.318-23-23-23s-23 10.318-23 23 10.318 23 23 23c4.761 0 9.298-1.436 13.177-4.162l13.661 14.208c.571.593 1.339.92 2.162.92.779 0 1.518-.297 2.079-.837a3.004 3.004 0 0 0 .083-4.242zM23.984 6c9.374 0 17 7.626 17 17s-7.626 17-17 17-17-7.626-17-17 7.626-17 17-17z" fill="currentColor"></path>
        </g>
      </svg>
    </label>
    <%= select_tag :category_id, options_for_select([['All Categories', 'all']] + @categories.map { |c| [c.name, c.id] }, params[:category_id]), class: 'dropdown' %>
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <% end %>
</div>
