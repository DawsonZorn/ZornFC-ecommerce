<div style="background: #3c3c3c; min-height: 100vh; padding: 0; margin: 0;">
  <h1 style="color: #FFD700; text-align: center;">Welcome to ZornFC</h1>

  <!-- Logo Image -->
  <div style="text-align: center; margin-bottom: 20px; margin-top: 0;">
    <%= image_tag('zornfc.png', alt: 'ZornFC Logo', style: 'width: 200px;') %>
  </div>

  <!-- Navigation Bar -->
  <nav style="background-color: #333; padding: 10px;">
    <ul style="list-style: none; margin: 0; padding: 0; display: flex; justify-content: center; gap: 20px;">
      <li><%= link_to 'Home', root_path, style: 'color: #FFD700; text-decoration: none;' %></li>
      <li><%= link_to 'All Products', root_path(filter: 'all'), style: 'color:  #FFD700; text-decoration: none;' %></li>
      <li><%= link_to 'On Sale', root_path(filter: 'on_sale'), style: 'color:  #FFD700; text-decoration: none;' %></li>
      <li><%= link_to 'New Products', root_path(filter: 'new'), style: 'color:  #FFD700; text-decoration: none;' %></li>
      <li><%= link_to 'Browse by Category', '#categories', style: 'color: #FFD700; text-decoration: none;' %></li>
    </ul>
  </nav>

  <!-- Browse by Category Section -->
  <div id="categories" style="margin: 20px 0; background-color: #333; padding: 10px;">
    <h2 style="color:#FFD700; text-align: center;">Browse by Category</h2>
    <ul style="list-style: none; padding: 0; display: flex; gap: 10px; flex-wrap: wrap; justify-content: center;">
      <% @categories.each do |category| %>
        <li style="padding: 10px; text-align: center;">
          <%= link_to category.name, category_path(category), class: 'btn btn-secondary' %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Products Section -->
  <% if params[:filter].present? %>
    <div style="margin-top: 20px; display: flex; flex-wrap: wrap; justify-content: center;">
      <% @products.each do |product| %>
        <div style="margin: 10px; padding: 10px; border: 1px solid #ddd; width: 200px; background-color: #fff;">
          <h3><%= link_to product.name, product_path(product) %></h3>
          <% if product.image.attached? %>
            <%= image_tag product.image, size: "150x150" %>
          <% else %>
            <p>No image available</p>
          <% end %>
          <p>Price: $<%= product.price %></p>
          <% if product.on_sale %>
            <p><strong>On Sale!</strong></p>
          <% end %>
          <%= link_to 'View Details', product_path(product), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p style="text-align: center; margin-top: 20px; color: #FFD700;">Select a filter or category to view products.</p>
  <% end %>
</div>
