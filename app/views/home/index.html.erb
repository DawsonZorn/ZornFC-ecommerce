<div style="background: #3c3c3c; min-height: 100vh; padding: 0; margin: 0;">
  <h1 style="color: #FFD700; text-align: center;">Welcome to ZornFC</h1>

  <!-- Logo Image -->
  <div style="text-align: center; margin-bottom: 20px; margin-top: 0;">
    <%= image_tag('zornfc.png', alt: 'ZornFC Logo', style: 'width: 250px;') %>
  </div>

  <!-- Search and Filter Partial -->
  <%= render 'search_filter' %>

  <!-- Navigation Bar Partial -->
  <%= render 'nav' %>

  <!-- Browse by Category Section -->
  <%= render 'categories', categories: @categories %>

  <!-- Products Section with Grid Partial -->
  <%= render 'product_grid' %>

  <!-- Pagination -->
  <div class="col-12">
    <%= paginate @products %>
  </div>
</div>