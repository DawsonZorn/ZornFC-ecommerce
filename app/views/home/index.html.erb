<h1>Welcome to ZornFC</h1>

<div>
  <h2>Browse by Category</h2>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <%= link_to 'All Products', root_path, class: 'btn btn-primary' %>
  <%= link_to 'On Sale', root_path(filter: 'on_sale'), class: 'btn btn-secondary' %>
  <%= link_to 'New Products', root_path(filter: 'new'), class: 'btn btn-secondary' %>
</div>

<div style="margin-top: 20px; display: flex; flex-wrap: wrap;">
  <% @products.each do |product| %>
    <div style="margin: 10px; padding: 10px; border: 1px solid #ddd; width: 200px;">
      <h3><%= link_to product.name, product_path(product) %></h3>
      <% if product.image.attached? %>
        <%= image_tag product.image, size: "150x150" %>
      <% else %>
        <p>No image available</p>
      <% end %>
      <p>Price: $<%= product.price %></p>
      <% if product.on_sale %>
        <p><strong>On Sale!</strong></p>
      <% end %>
      <%= link_to 'View Details', product_path(product), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
</div>